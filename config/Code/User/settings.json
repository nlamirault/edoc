                    }
                },
                {
                    "scope": "storage.type",
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "storage.modifier",
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "string",
                    "settings": {
