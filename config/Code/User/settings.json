                    }
                },
                {
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "keyword.control",
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "keyword.operator",
                    "settings": {
