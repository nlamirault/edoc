{
    // misc
    "telemetry.enableTelemetry": false,

    // Editor settings
    "editor.minimap.enabled": false,
    "editor.rulers": [
        88, 120
    ],
    "editor.wordWrapColumn": 110,

    // UI
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "toggle",

    "workbench.activityBar.visible": true,
    "workbench.statusBar.feedback.visible": false,
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.editor.enablePreview": false,

    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "Dockerfile.*": "dockerfile",
        "*.bashrc": "shellscript",
        "*.zshrc": "shellscript",
        "*.shrc": "shellscript"
    },
    "files.exclude": {
        "**/obj": true,
        "**/.vscode": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/*~": true,
        "**/.DS_Store": true,
        "**/.settings": true
    },

    // python
    "autoDocstring.docstringFormat": "google",
    "python.formatting.provider": "black",
    // "python.formatting.autopep8Args": ["--max-line-length", "120", "--experimental"],
    // "python.formatting.yapfArgs": ["--style", "{based_on_style: chromium, indent_width: 20}"]
    "python.formatting.blackArgs": ["--line-length", "100"],
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,

    },
    // To use Python Language Server
    // "python.jediEnabled": false,
    "python.linting.enabled": true,
    //"python.linting.pep8Enabled": true,

    // golang
    "go.formatTool": "gofmt",

    // javascript
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.tabSize": 2
    },

    // wal
    "wal.tokenColorTheme": "Dark (Visual Studio)",
    "workbench.colorCustomizations": {
        "[Wal]": {
            "focusBorder": "#55b5db",
            "foreground": "#d6d6d6",
            "widget.shadow": "#41535B",
            "selection.background": "#Cd3f45",
            "descriptionForeground": "#55b5db",
            "errorForeground": "#Cd3f45",
            "input.background": "#151718",
            "input.foreground": "#d6d6d6",
            "input.placeholderForeground": "#41535B",
            "inputOption.activeBorder": "#55b5db",
            "inputValidation.errorBackground": "#Cd3f45",
            "inputValidation.errorBorder": "#Cd3f45",
            "inputValidation.infoBackground": "#55b5db",
            "inputValidation.infoBorder": "#55b5db",
            "inputValidation.warningBackground": "#e6cd69",
            "inputValidation.warningBorder": "#e6cd69",
            "list.invalidItemForeground": "#Cd3f45",
            "list.errorForeground": "#Cd3f45",
            "list.warningForeground": "#e6cd69",
            "terminal.background": "#151718",
            "terminal.foreground": "#d6d6d6",
            "terminalCursor.background": "#151718",
            "terminalCursor.foreground": "#d6d6d6",
            "terminal.ansiBlack": "#151718",
            "terminal.ansiRed": "#Cd3f45",
            "terminal.ansiGreen": "#9fca56",
            "terminal.ansiYellow": "#e6cd69",
            "terminal.ansiBlue": "#55b5db",
            "terminal.ansiMagenta": "#a074c4",
            "terminal.ansiCyan": "#55dbbe",
            "terminal.ansiWhite": "#d6d6d6",
            "terminal.ansiBrightBlack": "#41535B",
            "terminal.ansiBrightRed": "#Cd3f45",
            "terminal.ansiBrightGreen": "#9fca56",
            "terminal.ansiBrightYellow": "#e6cd69",
            "terminal.ansiBrightBlue": "#55b5db",
            "terminal.ansiBrightMagenta": "#a074c4",
            "terminal.ansiBrightCyan": "#55dbbe",
            "terminal.ansiBrightWhite": "#ffffff",
            "activityBar.background": "#151718",
            "activityBar.foreground": "#d6d6d6",
            "sideBarSectionHeader.background": "#151718",
            "sideBar.background": "#151718",
            "sideBar.foreground": "#d6d6d6",
            "statusBar.background": "#a074c4",
            "statusBar.foreground": "#d6d6d6",
            "statusBar.debuggingBackground": "#9fca56",
            "statusBar.noFolderBackground": "#9fca56",
            "tab.activeBackground": "#151718",
            "tab.activeForeground": "#d6d6d6",
            "editor.background": "#151718",
            "editorOverviewRuler.modifiedForeground": "#e6cd69",
            "editorOverviewRuler.addedForeground": "#9fca56",
            "editorOverviewRuler.deletedForeground": "#Cd3f45",
            "editorOverviewRuler.warningForeground": "#e6cd69",
            "editorOverviewRuler.infoForeground": "#55b5db",
            "editorOverviewRuler.errorForeground": "#Cd3f45",
            "editorGutter.background": "#151718",
            "editorGutter.modifiedBackground": "#e6cd69",
            "editorGutter.addedBackground": "#9fca56",
            "editorGutter.deletedBackground": "#Cd3f45",
            "editorError.foreground": "#Cd3f45",
            "editorWarning.foreground": "#e6cd69",
            "editorInfo.foreground": "#55b5db",
            "editorHint.foreground": "#9fca56",
            "gitDecoration.modifiedResourceForeground": "#e6cd69",
            "gitDecoration.deletedResourceForeground": "#Cd3f45",
            "gitDecoration.untrackedResourceForeground": "#9fca56"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Wal]": {
            "textMateRules": [
                {
                    "scope": [
                        "meta.embedded",
                        "source.groovy.embedded"
                    ],
                    "settings": {
                        "foreground": "#D4D4D4"
                    }
                },
                {
                    "scope": "emphasis",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "strong",
                    "settings": {
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": "header",
                    "settings": {
                        "foreground": "#000080"
                    }
                },
                {
                    "scope": "comment",
                    "settings": {
                        "foreground": "#6A9955"
                    }
                },
                {
                    "scope": "constant.language",
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": [
                        "constant.numeric"
                    ],
                    "settings": {
                        "foreground": "#b5cea8"
                    }
                },
                {
                    "scope": "constant.regexp",
                    "settings": {
                        "foreground": "#646695"
                    }
                },
                {
                    "scope": "entity.name.tag",
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "entity.name.tag.css",
                    "settings": {
                        "foreground": "#d7ba7d"
                    }
                },
                {
                    "scope": "entity.other.attribute-name",
                    "settings": {
                        "foreground": "#9cdcfe"
                    }
                },
                {
                    "scope": [
                        "entity.other.attribute-name.class.css",
                        "entity.other.attribute-name.class.mixin.css",
                        "entity.other.attribute-name.id.css",
                        "entity.other.attribute-name.parent-selector.css",
                        "entity.other.attribute-name.pseudo-class.css",
                        "entity.other.attribute-name.pseudo-element.css",
                        "source.css.less entity.other.attribute-name.id",
                        "entity.other.attribute-name.attribute.scss",
                        "entity.other.attribute-name.scss"
                    ],
                    "settings": {
                        "foreground": "#d7ba7d"
                    }
                },
                {
                    "scope": "invalid",
                    "settings": {
                        "foreground": "#f44747"
                    }
                },
                {
                    "scope": "markup.underline",
                    "settings": {
                        "fontStyle": "underline"
                    }
                },
                {
                    "scope": "markup.bold",
                    "settings": {
                        "fontStyle": "bold",
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "markup.heading",
                    "settings": {
                        "fontStyle": "bold",
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": "markup.italic",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
